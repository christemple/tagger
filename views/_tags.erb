<% if @results %>
    <% if @selected_tags %>
        <div class=pure-g>
            <div class=pure-u>
                <ul>
                    <% @selected_tags.each do |tag| %>
                        <li><%= tag %></li>
                    <% end %>
                </ul>
           </div>
       </div>
    <% end %>

    <div class=pure-g-r>
        <div class=pure-u-3-4>
            <canvas id="myChart" width="1280" height="500"></canvas>
            <script>
                $(document).ready(function(){
                    new Chart($("#myChart").get(0).getContext("2d")).Line(<%= @chart_data %>);
                });
            </script>
        </div>
        <div class="pure-u-1-4 total_calls">
            <div><%= @total %></div>
        </div>
    </div>
<% else %>
    <p>No tags have been selected!</p>
<% end %>